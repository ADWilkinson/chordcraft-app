{
  "name": "chordcraft",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "yarn workspace @chordcraft/web dev",
    "dev:mobile": "yarn workspace @chordcraft/mobile start",
    "build:web": "yarn workspace @chordcraft/web build",
    "build:mobile": "yarn workspace @chordcraft/mobile build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "deduplicate:prod": "node scripts/deduplicate-test.js",
    "deduplicate:test": "node scripts/deduplicate-progressions.js --dry-run --verbose",
    "check-security": "node scripts/check-security-rules.js",
    "verify-functions": "node scripts/verify-cloud-functions.js",
    "manage-reports": "node scripts/manage-reports.js",
    "optimize": "node scripts/optimize.js",
    "prepare-db": "node scripts/prepare-for-production.js",
    "release": "node scripts/prepare-production-release.js",
    "analyze-progressions": "node scripts/analyze-and-clean-progressions.js",
    "prod-release": "npm run check-security && npm run verify-functions && npm run optimize && npm run prepare-db && npm run release",
    "deploy:web": "yarn workspace @chordcraft/web build && firebase deploy --only hosting",
    "deploy:mobile:preview": "cd packages/mobile && eas build --profile preview",
    "deploy:mobile:production": "cd packages/mobile && eas build --profile production"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "typescript": "~5.7.2"
  }
}
